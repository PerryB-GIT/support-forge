      "lessonIntro": "",
      "lessonOutro": "",
      "chapterCard": "",
      "screenCapture": ""
    }
  },
  "paths": {
    "scripts": "../../../docs/academy-content/video-scripts",
    "resources": "../../../docs/launchpad-academy/templates",
    "output": "./output"
  },
  "branding": {
    "primaryColor": "#8B5CF6",
    "secondaryColor": "#1E1B4B",

{
  "production": {
    "outputDir": "./output/videos",
    "tempDir": "./temp",
    "stateFile": "./video-production-state.json"
  },
  "heygen": {
    "apiKey": "${HEYGEN_API_KEY}",
    "defaultAvatar": "August_Casual_Front2_public",
    "defaultVoice": "453c20e1525a429080e2ad9e4b26f2cd",
    "avatarName": "Devon",
    "voiceName": "Archer",
    "defaultBackground": "support-forge-studio",
    "videoSettings": {
      "resolution": "720p",
      "aspectRatio": "16:9",
      "fps": 30
    }
  },
  "vertexAi": {
